    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Events",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/docker2mqtt",
            "console": "integratedTerminal",
            
            "env": {
                "DOCKER2MQTT_HOSTNAME": "${workspaceFolderBasename}",
                "MQTT_CLIENT_ID": "${workspaceFolderBasename}",
                "MQTT_PORT": "1883",
                "MQTT_TOPIC_PREFIX": "docker",
                "MQTT_ATTRIBUTE": "0",
                "EVENTS": "1",
                "STATS" : "0"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
